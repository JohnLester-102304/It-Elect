<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvProvinceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Province:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium"
            android:contentDescription="Label for province input" />

        <EditText
            android:id="@+id/etProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here..."
            android:layout_marginBottom="8dp"
            android:importantForAutofill="yes"
            android:contentDescription="Edit text for typing province name"
            android:padding="10dp"
            android:backgroundTint="#2196F3" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select a Province"
            android:contentDescription="AutoComplete field to select a province"
            android:padding="10dp"
            android:backgroundTint="#2196F3" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/city"
            android:contentDescription="Dropdown spinner to select city"
            android:padding="8dp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStandard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard"
            android:contentDescription="Standard button"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/download"
            android:contentDescription="Image button with download icon"
            android:backgroundTint="#E0E0E0"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />

        <ToggleButton
            android:id="@+id/btnToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="ON"
            android:textOff="OFF"
            android:contentDescription="Toggle button to switch ON or OFF"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        android:contentDescription="Image switcher displaying photos"
        app:layout_constraintTop_toBottomOf="@id/buttonSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <Button
        android:id="@+id/btnSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Image"
        android:contentDescription="Button to change image in switcher"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imageSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
